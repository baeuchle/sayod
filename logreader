#!/usr/bin/python3

"""Reads request for log find task from STDIN and prints the lines that
were found"""

import sys

from config import Config
from taggedlog import *

line = sys.stdin.readline().strip()
content_type = "text/x-plain-ask"
if line.startswith("content-type: "):
    content_type = line[len("content-type: "):]
    line = sys.stdin.readline().strip()

status_file= ""
try:
    config = Config(line, fail_on_missing_file=True)
    status_file = config.find('status', 'file', '')
except FileNotFoundError as fnfe:
    print("{} {}".format(fnfe.strerror, fnfe.filename), file=sys.stderr)
    sys.exit(1)
except BaseException as be:
    print("Status file cannot be determined:", str(be), file=sys.stderr)
    sys.exit(1)

subject_list = []
for line in sys.stdin:
    if line.strip() == "":
        break
    subject_list.append(line.strip())

action = next(sys.stdin).strip()

log_obj = TaggedLog(status_file, 'a+')
entries = log_obj.find(subjects=subject_list, action=action)
print(entries)
sys.exit(0)
